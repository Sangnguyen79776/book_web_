@model Cart

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
              <td>@item.BookId</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    <a href="@Url.Action("RemoveFromCart", "Cart", new { bookId = item.BookId })" class="btn btn-danger">Remove</a>
                    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Proceed to Checkout</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Items.Any())
{
    <p>Total: @Model.Items.Sum(x => x.Price * x.Quantity)</p>
}
else
{
    <p>Your cart is empty.</p>
}


