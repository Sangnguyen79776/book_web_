<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - book_web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/book_web.styles.css" asp-append-version="true" />
    <style>
        li{
            padding:10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">book_web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Genres" asp-action="Index">Genre Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="Index">Articles Page</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="Author">Author</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Events </a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="BookClubs">BookClubs </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ChatHub" asp-action="Index">Chat Hub </a>

                        </li>
                       <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AboutUs" asp-action="History">History</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="AboutUs" asp-action="Team">Team</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="BookStatistics" asp-action="Index1">Book Statistics</a>
                            
                           

                       
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Cart")">
                                Cart <span id="cart-count">(@Context.Session.GetInt32("CartItemCount") ?? 0)</span>
                            </a>

                        </li>
                        <li class="nav-item">
                           
                               @if(User.IsInRole("Admin"))
                              {
                                <a class="nav-link" href="@Url.Action("Index", "Discount")">Discounts</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ActivityLogs">ActivityLogs Page</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="UserList">List Of User Page</a>
                              }
                   
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CustomerService" asp-action="FAQs">FAQ</a>
                             <a class="nav-link text-dark" asp-area="" asp-controller="CustomerService" asp-action="Contact">Contact Us</a>
                        </li>
                       
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - book_web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // You can use JavaScript to update the cart count dynamically if needed
        // Example: fetch the cart count from session or a global state
        function updateCartCount(count) {
            document.getElementById('cart-count').textContent = `(${count})`;
        }
             window.onload = function() {
            fetchCartCount();
        };

        function fetchCartCount() {
            fetch('@Url.Action("GetCartCount", "Cart")')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('cart-count').textContent = `(${data})`;
                });
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signalr/dist/browser/signalr.js" ></script>
    

</body>
</html>
