@model book_web.Models.Discount

<h1>Create Discount</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="DiscountPercentage">Discount Percentage</label>
        <input type="number" asp-for="DiscountPercentage" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" asp-for="EndDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="MinimumAmountSpent">Minimum Amount Spent</label>
        <input type="number" asp-for="MinimumAmountSpent" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="MinimumNumberOfPeople">Minimum Number of People</label>
        <input type="number" asp-for="MinimumNumberOfPeople" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="IsActive">Is Active</label>
        <input type="checkbox" asp-for="IsActive" />
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>

